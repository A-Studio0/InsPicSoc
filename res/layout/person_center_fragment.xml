 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout
	    android:id="@+id/percenitem_image"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    
	    android:background="@drawable/percen_head_background">
	    	<LinearLayout 
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_gravity="center"
			    android:layout_marginTop="3.0dip"
			    
			    android:background="@drawable/percen_head_kuang">
			    <com.astudio.inspicsoc.view.RoundedImageView 
		            android:layout_gravity="center" 
		            android:id="@+id/headImageView" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginTop="3.0dip"
		            android:layout_marginBottom="3.0dip"
		            android:src="@drawable/head_default_miao" 
		            android:adjustViewBounds="true" 
		            android:maxHeight="130dip" 
		            android:maxWidth="130dip"/>
	    	</LinearLayout>
	 	</LinearLayout>
 	 <LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    <LinearLayout
			
			android:id="@+id/PerCenLeftButton" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip"
			
			android:layout_marginRight="3.0dip"   
			android:background="@drawable/percen_left" 
			android:layout_weight="1.0"
			android:orientation="vertical"
		>
		<TextView android:textSize="26.0sp" 
            android:textColor="#ffffffff" 
            android:layout_gravity="center" 
          
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="3dip" 
            android:text="0"/>
         <TextView android:textSize="16.0sp" 
            android:textColor="#80ffffff" 
            android:layout_gravity="center" 
          
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="3.0dip" 
            android:text="收藏"/>
    </LinearLayout> 
		 <LinearLayout 
		android:id="@+id/PerCenCenterButton" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip"
			android:background="@drawable/percen_center"
			android:layout_weight="1.0"
			android:orientation="vertical"
		>
      <TextView android:textSize="26.0sp" 
            android:textColor="#ffffffff" 
            android:layout_gravity="center" 
          
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="3dip" 
            android:text="0"/>
		 <TextView android:textSize="16.0sp" 
            android:textColor="#ffffffff" 
            android:layout_gravity="center" 
          
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="3.0dip" 
            android:text="图片"/>
		 </LinearLayout> 
		 <LinearLayout
			
			android:id="@+id/PerCenRightButton" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:layout_marginTop="3.0dip"
			android:layout_marginLeft="3.0dip"
			android:background="@drawable/percen_left" 
			android:layout_weight="1.0"
			android:orientation="vertical"
		>
		 <TextView android:textSize="26.0sp" 
            android:textColor="#ffffffff" 
            android:layout_gravity="center" 
          
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="3dip" 
            android:text="1"/>
		 <TextView android:textSize="16.0sp" 
            android:textColor="#80ffffff" 
            android:layout_gravity="center" 
            android:id="@+id/nickNameTextView" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="3.0dip"
            android:text="好友"/>
		
		
		 </LinearLayout> 
    </LinearLayout>
     <ListView
         android:id="@+id/list_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:cacheColorHint="#00000000"
          android:fadingEdge="none" >
     </ListView>

</LinearLayout>
