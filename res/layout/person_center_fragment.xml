 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

 	<ImageView
 	    android:id="@+id/percenitem_image"
 	    android:layout_width="wrap_content"
 	    android:layout_height="wrap_content"
 	    android:background="@drawable/percen_head" />

 	 <LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageButton 
		android:id="@+id/PerCenLeftButton" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:background="@drawable/percen_left" 
		android:layout_weight="1.0"
		/> 
		 <ImageButton 
		android:id="@+id/PerCenCenterButton" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:background="@drawable/percen_center"
		android:layout_weight="1.0"
		/> 
		 <ImageButton 
		android:id="@+id/PerCenRightButton" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:background="@drawable/percen_right" 
		android:layout_weight="1.0"
		/> 
    </LinearLayout>
     <ListView
         android:id="@+id/list_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:cacheColorHint="#00000000"
          android:fadingEdge="none" >
     </ListView>

</LinearLayout>
