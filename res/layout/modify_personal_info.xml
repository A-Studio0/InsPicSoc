<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_bg_texture">
    
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:background="@drawable/comm_title_bg" >

            <Button
                android:id="@+id/friends_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/br_prev" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:text="修改个人信息"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout> 
        </LinearLayout>
    <!-- 整个settings页面的 滚动布局-->
  <!-- <ScrollView 
        android:focusable="true" 
        android:focusableInTouchMode="true" 
        android:visibility="visible" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >  -->  
        <LinearLayout 
            android:background="@drawable/img_bg_texture"
            android:orientation="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            
            <!-- 账户设置 与个人信息-->
            <LinearLayout 
            	android:orientation="vertical" 
            	android:layout_width="fill_parent" 
            	android:layout_height="wrap_content" 
            	android:layout_marginLeft="10.0dip" 
            	android:layout_marginTop="12.0dip" 
            	android:layout_marginRight="10.0dip">
            	
                <!-- 账户设置 -->
             	<RelativeLayout 
             	    android:id="@+id/button_settings_account" 
             	    android:background="@drawable/selector_list_blockbg_top" 
             	    android:focusable="true" 
             	    android:clickable="true" 
             	    android:layout_width="fill_parent" 
             	    android:layout_height="72.0dip">
                    <ImageView 
                        android:id="@+id/face" 
                        android:layout_width="48.0dip" 
                        android:layout_height="48.0dip" 
                        android:layout_marginLeft="12.0dip" 
                        android:src="@drawable/img_test_face" 
                        android:layout_centerVertical="true" />
                    <RelativeLayout 
                        android:layout_gravity="center_vertical" 
                        android:paddingLeft="12.0dip" 
                        android:layout_width="fill_parent" 
                        android:layout_height="wrap_content" 
                        android:layout_weight="1.0" 
                        android:layout_toRightOf="@id/face" 
                        android:layout_centerVertical="true">
	                   
                        
                    </RelativeLayout>
                    <ImageView 
                        android:layout_width="14.0dip" 
                        android:layout_height="14.0dip" 
                        android:layout_marginRight="8.0dip" 
                        android:src="@drawable/open_arrow" 
                        android:layout_alignParentRight="true" 
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <!-- 账户设置 END-->
             	
                <!-- 个人信息 -->
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="52.0dip"
                    android:background="@drawable/selector_list_blockbg_middle"
                    android:clickable="true"
                    android:focusable="true" >

                    <View
                        android1:id="@+id/view2"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@drawable/list_blockbg_divider" />
 

                    <RelativeLayout
                        android1:layout_width="fill_parent"
                        android1:layout_height="50.0dip"
                        android1:layout_alignParentBottom="true"
                        android1:layout_alignParentLeft="true"
                        android1:background="@drawable/selector_list_blockbg_middle"
                        android1:clickable="true"
                        android1:focusable="true" >

                         <TextView
                            android1:id="@+id/textView2" 
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_alignParentLeft="true"
                            android1:layout_centerVertical="true"
                            android1:layout_marginLeft="12dp"
                            android1:gravity="center_vertical"
                            android1:text="姓名" 
                             android:textSize="20dp"/>

                        <EditText
                            android1:id="@+id/textView3" 
                            android1:layout_width="150dp"
                            android1:layout_height="wrap_content"
                            android1:layout_alignBaseline="@+id/textView2"
                            android1:layout_alignParentRight="true"
                            android1:gravity="center_vertical"
                            android1:hint="麦兜兜" />
                       
                    </RelativeLayout>
                    
                </RelativeLayout>
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="52.0dip"
                    android:background="@drawable/selector_list_blockbg_middle"
                    android:clickable="true"
                    android:focusable="true" >

                    <View
                        android1:id="@+id/view5"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@drawable/list_blockbg_divider" />
 

                    <RelativeLayout
                        android1:layout_width="fill_parent"
                        android1:layout_height="50.0dip"
                        android1:layout_alignParentBottom="true"
                        android1:layout_alignParentLeft="true"
                        android1:background="@drawable/selector_list_blockbg_middle"
                        android1:clickable="true"
                        android1:focusable="true" >

                         <TextView
                            android1:id="@+id/textView8"
                             
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_alignParentLeft="true"
                            android1:layout_centerVertical="true"
                            android1:layout_marginLeft="12dp"
                            android1:gravity="center_vertical"
                            android1:text="性别" 
                             android:textSize="20dp"/>

                        <EditText
                            android1:id="@+id/textView9"
                            
                            android1:layout_width="150dp"
                            android1:layout_height="wrap_content"
                            android1:layout_alignBaseline="@+id/textView8"
                            android1:layout_alignParentRight="true"
                            android1:gravity="center_vertical"
                            android1:hint="F" />
                       
                    </RelativeLayout>
                    
                </RelativeLayout>
                
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="52.0dip"
                    android:background="@drawable/selector_list_blockbg_middle"
                    android:clickable="true"
                    android:focusable="true" >

                    <View
                        android1:id="@+id/view3"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@drawable/list_blockbg_divider" />
 

                    <RelativeLayout 
                        android1:layout_width="fill_parent"
                        android1:layout_height="50.0dip"
                        android1:layout_alignParentLeft="true"
                        android1:layout_below="@+id/view3"
                        android1:background="@drawable/selector_list_blockbg_middle"
                        android1:clickable="true"
                        android1:focusable="true" >

                        <TextView
                            android:id="@+id/textView4"
                             
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_centerVertical="true"
                            android1:layout_marginLeft="12.0dip"
                            android1:gravity="center_vertical"
                            android1:text="邮件"
                             android:textSize="20dp" />
 
                         <EditText
                              
                             android1:layout_width="150dp"
                             android1:layout_height="wrap_content"
                             android1:layout_alignBaseline="@+id/textView4"
                             android1:layout_alignParentRight="true"
                             android1:gravity="center_vertical"
                             android1:hint="67976@qq.com" />

                    </RelativeLayout>
                    
                    
                </RelativeLayout>
                
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="52.0dip"
                    android:background="@drawable/selector_list_blockbg_middle"
                    android:clickable="true"
                    android:focusable="true" >

                    <View
                        android1:id="@+id/view4"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@drawable/list_blockbg_divider" />
 

                    <RelativeLayout 
                        android1:layout_width="fill_parent"
                        android1:layout_height="50.0dip"
                        android1:layout_alignParentLeft="true"
                        android1:layout_below="@+id/view4"
                        android1:background="@drawable/selector_list_blockbg_middle"
                        android1:clickable="true"
                        android1:focusable="true" >

                        <TextView
                            android:id="@+id/textView5" 
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_centerVertical="true"
                            android1:layout_marginLeft="12.0dip"
                            android1:gravity="center_vertical"
                            android1:text="住址" 
                             android:textSize="20dp"/> 

                            <EditText 
                                android1:layout_width="150dp"
                                android1:layout_height="wrap_content"
                                android1:layout_alignBaseline="@+id/textView5"
                                android1:layout_alignParentRight="true"
                                android1:gravity="center_vertical"
                                android1:hint="浙江杭州" />

                    </RelativeLayout>
                    
                    
                </RelativeLayout>
                <!-- 个人信息 END-->
                
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="52.0dip"
                    android:background="@drawable/selector_list_blockbg_middle"
                    android:clickable="true"
                    android:focusable="true" >

                    <View
                        android1:id="@+id/view0"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@drawable/list_blockbg_divider" />
 

                    <RelativeLayout 
                        android1:layout_width="fill_parent"
                        android1:layout_height="50.0dip"
                        android1:layout_alignParentLeft="true"
                        android1:layout_below="@+id/view0"
                        android1:background="@drawable/selector_list_blockbg_middle"
                        android1:clickable="true"
                        android1:focusable="true" >

                        <TextView
                            android:id="@+id/textView6" 
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_centerVertical="true"
                            android1:layout_marginLeft="12.0dip"
                            android1:gravity="center_vertical"
                            android1:text="电话"
                            android:textSize="20dp" />
 
                         <EditText 
                             android1:layout_width="150dp"
                             android1:layout_height="wrap_content"
                             android1:layout_alignBaseline="@+id/textView6"
                             android1:layout_alignParentRight="true"
                             android1:gravity="center_vertical"
                             android1:hint="18288686688" />

                    </RelativeLayout>
                    
                    
                </RelativeLayout>
                
                <RelativeLayout 
                    android:layout_width="fill_parent"
                    android:layout_height="52.0dip"
                    android:background="@drawable/selector_list_blockbg_middle"
                    android:clickable="true"
                    android:focusable="true" >

                    <View
                        android1:id="@+id/view6"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:background="@drawable/list_blockbg_divider" />
 

                    <RelativeLayout 
                        android1:layout_width="fill_parent"
                        android1:layout_height="50.0dip"
                        android1:layout_alignParentLeft="true"
                        android1:layout_below="@+id/view6"
                        android1:background="@drawable/selector_list_blockbg_bottom"
                        android1:clickable="true"
                        android1:focusable="true" >

                        <TextView
                            android:id="@+id/textView7" 
                            android1:layout_width="wrap_content"
                            android1:layout_height="wrap_content"
                            android1:layout_centerVertical="true"
                            android1:layout_marginLeft="12.0dip"
                            android1:gravity="center_vertical"
                            android1:text="生日"
                            android:textSize="20dp" />
 
                         <EditText 
                             android1:layout_width="150dp"
                             android1:layout_height="wrap_content"
                             android1:layout_alignBaseline="@+id/textView7"
                             android1:layout_alignParentRight="true"
                             android1:gravity="center_vertical"
                             android1:hint="7月26日" />

                    </RelativeLayout>
                    
                    
                </RelativeLayout>
            </LinearLayout>
           
    
		 	
		    <!-- 登出按钮 -->        
		    <Button 
		        android:id="@+id/button_settings_logout" 
		        android:background="@drawable/selector_deny_bg" 
		        android:layout_width="fill_parent" 
		        android:layout_height="46.0dip" 
		        android:layout_marginLeft="10.0dip" 
		        android:layout_marginTop="16.0dip" 
		        android:layout_marginRight="10.0dip" 
		        android:text="登     出"   />
        
    	</LinearLayout>
 <!--   </ScrollView> --> 
    <!-- 整个settings页面的 滚动布局 END-->
    
</LinearLayout>
