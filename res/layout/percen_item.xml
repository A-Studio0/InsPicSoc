<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/news_item_bg"
    android:orientation = "vertical"
     >
    
    <RelativeLayout
        android:id="@+id/head_bar"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation = "vertical"
        >
         <ImageView
	        android:id="@+id/percenitem_image"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
        />
   
        <TextView
            android:id="@+id/percenitem_description"  
            android:textSize="16.0sp" 
            android:layout_gravity="center_horizontal" 
            android:layout_below="@id/percenitem_image"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:layout_marginTop="10.0dip" />
      <RelativeLayout
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_below="@id/percenitem_description"
		    	android:orientation = "vertical"
		        >
		  <RelativeLayout
		        android:id="@+id/pos_col"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation = "horizontal"
		        >
		        <!--
		        android:layout_below="@id/percenitem_description" 
		         android:layout_centerVertical="true"
		          
		         -->
		          <TextView
		            android:id="@+id/percenitem_position"  
		            android:textSize="16.0sp" 
		            android:layout_gravity="left" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginTop="10.0dip" />
		          <!-- 
		          <TextView
		            android:id="@+id/percenitem_collectNum"  
		            android:textSize="16.0sp" 
		            android:layout_gravity="right" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="15.0dip"
		            android:text="收藏数：" />
		           -->
		          <TextView
		            android:id="@+id/percenitem_collectNum"  
		            android:textSize="16.0sp" 
		            android:layout_gravity="right" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_alignParentRight="true"
		            android:layout_marginTop="10.0dip" />
          </RelativeLayout>
         <RelativeLayout
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_below="@id/pos_col"
		    	android:orientation = "horizontal"
		        >
		          <TextView
		            android:id="@+id/percenitem_date"  
		            android:textSize="16.0sp" 
		            android:layout_gravity="left" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_marginTop="10.0dip" />
		          <!-- android:layout_toLeftOf="@id/percenitem_viewNum" -->
		          <!-- 
		          <TextView
		            android:id="@+id/percenitem_collectNum"  
		            android:textSize="16.0sp" 
		            android:layout_gravity="right" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="15.0dip"
		            android:text="浏览数：" />
		             -->
		           <TextView
		            android:id="@+id/percenitem_viewNum"  
		            android:textSize="16.0sp" 
		            android:layout_gravity="right" 
		            android:layout_width="wrap_content" 
		            android:layout_height="wrap_content" 
		            android:layout_alignParentRight="true"
		            android:layout_marginTop="10.0dip" />
		    </RelativeLayout>
		</RelativeLayout>
    </RelativeLayout>
    <LinearLayout 
        	android:id="@+id/spiltline"
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_below="@id/head_bar" >
   		 <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/spilt_line" />
    </LinearLayout>
  
 
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/spiltline" 
    	android:orientation="horizontal" >
          <ImageView
		        android:id="@+id/percenitem_comment"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"		       
		        />
       </RelativeLayout>
   
</RelativeLayout>	


 